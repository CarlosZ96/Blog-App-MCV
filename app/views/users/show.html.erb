<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "user" %>
<% end %>

<div class="users">
  <% if @posts.present? %>
    <% user = @posts.first.user %>
    <div class="Users-Container">
      <img class="Users-img" src="https://cdn-icons-png.flaticon.com/128/3177/3177440.png"/>
      <div class="User-Text-Container">
        <h1 class="Username"><%= user.name %></h1>
        <h3 class="Post-Container">Posts: <%= user.posts_counter.zero? ? '0' : user.posts_counter %></h3>
      </div>
    </div>
    <div class="txt-Container">
      <h2 class="txt">Bio:</h2>
      <h3 class="txt">This is a generic example for the user's Bio</h3>
    </div>
    <% @posts.each do |post| %>
      <div class="txt-Container">
        <%= link_to posts_path(post) do %>
          <h2 class="txt">Post # <%= post.id %></h2>
          <h2 class="txt"><%= post.title %></h2>
        <% end %>
      </div>
    <% end %>
    <div class="button-container">
    <button type="button" class="button-posts"><%= link_to "See all posts", posts_path %></button>
    </div>
  <% else %>
    <p>There are no posts available.</p>
  <% end %>
</div>

