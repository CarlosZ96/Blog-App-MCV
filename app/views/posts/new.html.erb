<!-- app/views/posts/new.html.erb -->
<h1>Create a New Post</h1>

<%= form_with(model: @post, url: new_post_path(current_user), method: :post) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>
